FROM toolsetlink/build-upgradelink:v2.0.1 AS builder

WORKDIR /go/src/upgradelink-admin-core-api/

COPY . .

# 定义构建参数（由 Buildx 自动注入，对应目标架构）
ARG TARGETOS
ARG TARGETARCH

RUN go mod tidy \
    && go mod download

RUN CGO_ENABLED=0 GOOS=$TARGETOS GOARCH=$TARGETARCH go build -ldflags="-s -w" -o /go/src/upgradelink-admin-core-api/server/api/core-api /go/src/upgradelink-admin-core-api/server/api/core.go

# 缩小包体积
RUN tar zcvf /go/src/upgradelink-admin-core-api/server/core.tar.gz -C /go/src/upgradelink-admin-core-api/server api/core-api api/etc


FROM toolsetlink/alpine-upgradelink:v2.0.0 AS prod

LABEL description="upgradelink-admin-core-api"

ARG ENV=prod

ENV RUN_MODE=$ENV APP_NAME="upgradelink-admin-core-api"

WORKDIR /link/upgradelink-admin-core-api

COPY --from=builder /go/src/upgradelink-admin-core-api/server/core.tar.gz  .

COPY --from=builder /go/src/upgradelink-admin-core-api/build/nginx.conf /etc/nginx/
COPY --from=builder /go/src/upgradelink-admin-core-api/build/logrotate-nginx /link/upgradelink-admin-core-api/build/logrotate-nginx
COPY --from=builder /go/src/upgradelink-admin-core-api/build/supervisord-api.conf /link/upgradelink-admin-core-api/build/supervisord.conf

RUN tar -zxvf core.tar.gz \
    && rm -f core.tar.gz \
    && sed -i '$a\0 0 * * * logrotate -f /link/upgradelink-admin-core-api/build/logrotate-nginx' /var/spool/cron/crontabs/root \
    && echo '''mkdir -p /link/logs/nginx && \
        mkdir -p /link/logs/supervisor && \
        supervisord -c /link/upgradelink-admin-core-api/build/supervisord.conf''' > start.sh \
    && chmod a+x start.sh

EXPOSE 80

CMD [ "/bin/bash", "start.sh" ]

# 在当面模块根目录下执行  /upgradelink/upgradelink-admin-core

# amd架构
# docker buildx build  -t upgradelink-admin-core-api:2.2.0 --platform=linux/amd64 -f build/Dockerfile-api . --load
# arm架构
# docker buildx build  -t upgradelink-admin-core-api:2.2.0 --platform=linux/arm64 -f build/Dockerfile-api . --load

# 打包开源镜像
# docker buildx build -t toolsetlink/upgradelink-admin-core-api:2.2.0 --platform=linux/amd64,linux/arm64 -f build/Dockerfile-api . --push

