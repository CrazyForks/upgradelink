FROM toolsetlink/build-upgradelink:v2.0.1 AS builder

WORKDIR /go/src/upgradelink-admin-core-rpc/

COPY . .

# 定义构建参数（由 Buildx 自动注入，对应目标架构）
ARG TARGETOS
ARG TARGETARCH

RUN go mod tidy \
    && go mod download

RUN CGO_ENABLED=0 GOOS=$TARGETOS GOARCH=$TARGETARCH go build -ldflags="-s -w" -o /go/src/upgradelink-admin-core-rpc/server/rpc/core-rpc /go/src/upgradelink-admin-core-rpc/server/rpc/core.go


RUN tar zcvf /go/src/upgradelink-admin-core-rpc/server/core.tar.gz -C /go/src/upgradelink-admin-core-rpc/server rpc/core-rpc rpc/etc

FROM toolsetlink/alpine-upgradelink:v2.0.0 AS prod

LABEL description="upgradelink-admin-core-rpc"

ARG ENV=prod

ENV RUN_MODE=$ENV APP_NAME="upgradelink-admin-core-rpc"

WORKDIR /link/upgradelink-admin-core-rpc

COPY --from=builder /go/src/upgradelink-admin-core-rpc/server/core.tar.gz  .

COPY --from=builder /go/src/upgradelink-admin-core-rpc/build/supervisord-rpc.conf /link/upgradelink-admin-core-rpc/build/supervisord.conf

RUN tar -zxvf core.tar.gz \
    && rm -f core.tar.gz \
    && echo '''mkdir -p /link/logs/supervisor && \
        supervisord -c /link/upgradelink-admin-core-rpc/build/supervisord.conf''' > start.sh \
    && chmod a+x start.sh

EXPOSE 9101

CMD [ "/bin/bash", "start.sh" ]

# 在当面模块根目录下执行  /upgradelink/upgradelink-admin-core

# amd架构
# docker buildx build  -t upgradelink-admin-core-rpc:2.0.0 --platform=linux/amd64 -f build/Dockerfile-rpc . --load
# arm架构
# docker buildx build  -t upgradelink-admin-core-rpc:2.0.0 --platform=linux/arm64 -f build/Dockerfile-rpc . --load

# 打包开源镜像
# docker buildx build -t toolsetlink/upgradelink-admin-core-rpc:2.0.0 --platform=linux/amd64,linux/arm64 -f build/Dockerfile-rpc . --push
