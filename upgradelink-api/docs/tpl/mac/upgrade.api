syntax = "v1"

info(
    title: "API management"
    desc: "API management is used to register APIs and manage APIs"
    author: "toolsetlink"
    email: "toolsetlink@163.com"
    version: "v1.0"
)

import "../base.api"

type (

    GetMacUpgradeInfoReq {
        // Mac 应用 唯一标识
        MacKey string `json:"macKey"`

        // 客户端应用版本号
        VersionCode int64 `json:"versionCode"`

        // 升级指定版本（可空，为空时是最新版本）
        AppointVersionCode int64 `json:"appointVersionCode,default=0"`

        // arch
        Arch string `json:"arch"`

        // 设备机型唯一标识
        DevModelKey string `json:"devModelKey,optional"`

        // 设备唯一标识
        DevKey string `json:"devKey,optional"`
    }

    GetMacUpgradeInfoResp {
        BaseDataInfo

        Data GetMacUpgradeInfoRespData `json:"data"`
    }

    GetMacUpgradeInfoRespData {

        // mac 应用 唯一标识
        MacKey string `json:"macKey,optional"`

        // 应用包名
        PackageName string `json:"packageName,optional"`

        // 客户端应用版本名称
        VersionName string `json:"versionName,optional"`

        // 应用版本号
        VersionCode int64 `json:"versionCode,optional"`

        // arch
        Arch string `json:"arch,optional"`

        // 最新版本下载地址
        UrlPath string `json:"urlPath,optional"`

        // 文件 大小
        UrlFileSize uint64 `json:"urlFileSize,optional"`

        // 文件 Md5
        UrlFileMd5 string `json:"urlFileMd5,optional"`

        // 升级类型 0：未知方式；1：提示升级；2：静默升级；3: 强制升级
        UpgradeType int64 `json:"upgradeType,optional"`

        // 提示升级描述内容
        PromptUpgradeContent string `json:"promptUpgradeContent,optional"`
    }
)




type (

    GetMacVersionInfoReq {
        // Mac 应用 唯一标识
        MacKey string `json:"macKey"`

        // 客户端应用版本号
        VersionCode int64 `json:"versionCode"`

        // arch
        Arch string `json:"arch"`
    }

    GetMacVersionInfoResp {
        BaseDataInfo

        Data GetMacVersionInfoRespData `json:"data"`
    }

    GetMacVersionInfoRespData {

        // mac 应用 唯一标识
        MacKey string `json:"macKey,optional"`

        // 应用包名
        PackageName string `json:"packageName,optional"`

        // 客户端应用版本名称
        VersionName string `json:"versionName,optional"`

        // 应用版本号
        VersionCode int64 `json:"versionCode,optional"`

        // arch
        Arch string `json:"arch"`

        // 描述
        Description string `json:"description,optional"`
    }
)

// RateLimit 流量控制
// ReplayAttack 防重放攻击
// Signature 签名认证
@server(
    prefix: /v1/mac
    group: mac
    timeout: 30s
    middleware: RateLimit, ReplayAttack, Signature
)
service api {
    // Get API list | 获取升级任务
    @handler getMacUpgradeInfo
    post /upgrade (GetMacUpgradeInfoReq) returns (GetMacUpgradeInfoResp)

    // 获取 版本信息
    @handler getMacVersionInfo
    post /version (GetMacVersionInfoReq) returns (GetMacVersionInfoResp)
}

type (
    GetMacDownloadInfoReq {
        // mac 应用 唯一标识
        MacKey string `form:"macKey"`
        // 指定版本（可空，为空时是最新版本）
        VersionCode int64 `form:"versionCode,default=0"`
        // 指定版本id
        VersionId int64 `form:"versionId,default=0"`
    }
)
// RateLimit 流量控制
@server(
    group: download
    prefix: /v1/mac
    timeout: 30s
    middleware: CdnRateLimit
)
service api {
    @handler getMacDownloadInfo
    get /download (GetMacDownloadInfoReq) returns (string)
}
